<Window x:Class="ParkingWork.Windows.Edits.EditParkingLotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        Title="Изменить парковочное место" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Наименование места:" />
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
            
            <TextBlock Text="Доступность:" />
            <ComboBox SelectedItem="{Binding IsFree, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10">
                <ComboBox.ItemsSource>
                    <x:Array Type="{x:Type system:String}">
                        <system:String>Свободно</system:String>
                        <system:String>Занято</system:String>
                    </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>
            
            <Button Content="Изменить" Command="{Binding ChangeCommand}" Width="100" HorizontalAlignment="Right" />
            <Button Content="Назад" Command="{Binding RedirectBackCommand}" Width="100" HorizontalAlignment="Right" Margin="0, 10, 0, 0" />
        </StackPanel>
    </Grid>
</Window>