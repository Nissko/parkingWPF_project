<Window x:Class="ParkingWork.Windows.Edits.EditAttendantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить кладовщика" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Фамилия:" />
            <TextBox Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
            
            <TextBlock Text="Имя:" />
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />
            
            <TextBlock Text="Отчество:" />
            <TextBox Text="{Binding Patronymic, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />

            <Button Content="Изменить" Command="{Binding ChangeCommand}" Width="100" HorizontalAlignment="Right" />
            <Button Content="Назад" Command="{Binding RedirectBackCommand}" Width="100" HorizontalAlignment="Right" Margin="0, 10, 0, 0" />
        </StackPanel>
    </Grid>
</Window>
