<Window x:Class="ParkingWork.Windows.Adds.AddParkingLotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить парковочное место" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Название:" />
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />

            <TextBlock Text="Выберите стоянку:" />
            <ComboBox ItemsSource="{Binding Attendants}" 
                      SelectedItem="{Binding SelectedParking}" 
                      DisplayMemberPath="Name" 
                      Margin="0,0,0,10" />

            <Button Content="Сохранить" Command="{Binding SaveCommand}" Width="100" HorizontalAlignment="Right" />
            <Button Content="Назад" Command="{Binding RedirectBackCommand}" Width="100" HorizontalAlignment="Right" Margin="0, 10, 0, 0" />
        </StackPanel>
    </Grid>
</Window>