<Window x:Class="ParkingWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkingWork"
        mc:Ignorable="d"
        Title="Парковка" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Menu>
            <MenuItem Header="Файл">
                <MenuItem Header="Сохранить в Excel" Command="{Binding SaveToExcelCommand}" />
                <MenuItem Header="Сохранить в текстовый файл" Command="{Binding SaveToTextFileCommand}" />
                <MenuItem Header="Выход" Command="{Binding CloseApplicationCommand}" />
            </MenuItem>
            <MenuItem Header="Действия">
                <MenuItem Header="Добавить клиента" Command="{Binding AddOwnerCommand}" />
                <MenuItem Header="Добавить кладовщика" Command="{Binding AddAttendantCommand}" />
                <MenuItem Header="Добавить автостоянку" Command="{Binding AddParkingCompanyCommand}" />
                <MenuItem Header="Добавить парковочное место" Command="{Binding AddParkingLotCommand}" />
            </MenuItem>
            <MenuItem Header="Отчеты">
                <MenuItem Header="Вывести данные на печать" Command="{Binding PrintCommand}" />
                <MenuItem Header="Вывести статистику" />
            </MenuItem>
        </Menu>
        <TabControl Margin="0, 20, 0, 0">
            <TabItem Header="Клиенты">
                <ListBox ItemsSource="{Binding Owners}" Margin="10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <!-- Информация о клиенте -->
                                <TextBlock Text="{Binding ContactInformation}" TextWrapping="Wrap" Padding="0, 5, 0, 5" />

                                <!-- Кнопки управления -->
                                <StackPanel>
                                    <Button Width="100" Padding="5" Content="Изменить" HorizontalAlignment="Left"
                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=TabItem}}"
                                            CommandParameter="{Binding}" Margin="5" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="Стоянки">
                <ListBox ItemsSource="{Binding ParkingsCompany}" Margin="10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <!-- Информация о парковочном месте -->
                                <TextBlock Text="{Binding ContactInformation}" TextWrapping="Wrap"  Padding="0, 5, 0, 5" />

                                <!-- Кнопки управления -->
                                <StackPanel>
                                    <Button Width="100" Padding="5" Content="Изменить" HorizontalAlignment="Left"
                                            Command="{Binding DataContext.EditParkingCompanyCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding }" Margin="5" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="Парковочные места">
                <ListBox ItemsSource="{Binding ParkingLots}" Margin="10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <!-- Информация о парковочном месте -->
                                <TextBlock Text="{Binding NormalizedName}" TextWrapping="Wrap"  Padding="0, 5, 0, 5" />

                                <!-- Кнопки управления -->
                                <StackPanel>
                                    <Button Width="100" Padding="5" Content="Изменить" HorizontalAlignment="Left"
                                            Command="{Binding DataContext.EditParkingLotCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" Margin="5" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="Кладовщики">
                <ListBox ItemsSource="{Binding Attendants}" Margin="10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <!-- Информация о кладовщиках -->
                                <TextBlock Text="{Binding FullName}" TextWrapping="Wrap"  Padding="0, 10, 0, 10" />

                                <!-- Кнопки управления -->
                                <StackPanel>
                                    <Button Width="100" Padding="5" Content="Изменить" HorizontalAlignment="Left"
                                            Command="{Binding DataContext.EditAttendantCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding }" Margin="5" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="Квитанция">
                <StackPanel>
                    <!-- Форма для создания квитанции -->
                    <TextBlock Text="Выберите владельца:" />
                    <ComboBox Width="200" Margin="5" HorizontalAlignment="Left" DisplayMemberPath="Name" SelectedItem="{Binding SelectedOwner}" />
                    <TextBlock Text="Выберите автостоянку:" />
                    <ComboBox Width="200" Margin="5" HorizontalAlignment="Left" DisplayMemberPath="Name" SelectedItem="{Binding SelectedParkingLot}" />
                    <TextBlock Text="Количество суток:" />
                    <TextBox Width="200" Margin="5" HorizontalAlignment="Left" />
                    <Button Width="200" Padding="5" HorizontalAlignment="Left" Content="Создать квитанцию" Command="{Binding CreateReceiptCommand}" Margin="5" />
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
